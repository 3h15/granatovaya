{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/toutes-nos-actualites.html",
        "function": "content"
      },
      {
        "source": "/actualites/**",
        "function": "content"
      },
      {
        "source": "/offres-emploi.html",
        "function": "content"
      },
      {
        "source": "/offres-emploi/**",
        "function": "content"
      },
      {
        "source": "/en/job-vacancies.html",
        "function": "content"
      },
      {
        "source": "/en/job-vacancies/**",
        "function": "content"
      }
    ]
  },
  "database": {
    "rules": "database.bolt"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}

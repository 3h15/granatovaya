function isUpdateService(){
  return auth.uid === 'update-service';
}

function isServeService(){
  return auth.uid === 'serve-service';
}

path / {
  read(){ false }
  write(){ false }
}

path /content/news {
  read(){ isServeService() }
  write(){ isUpdateService() }
}

path /content/jobOffers {
  read(){ isServeService() }
  write(){ isUpdateService() }
}